extends layout.pug

block custom-styles
    link(rel='stylesheet', href='/static/styles/allBikes.css')

block content
  .wrapper.wrapper--t-padding
    .flex__container-filter
      div.loginPopUp_Box_Hidden Please Log-In or Sign-Up !
      .flex__item-filter
        input.query-string(placeholder="find by brand or model", type="text", name="query")
        button.search-button(value="Search") Search
      .flex__item-filter
        span Filter by: 
        select#filter
          option(value="asc-price") Ascending price
          option(value="dsc-price") Descending price
          option(value="brand-name") Brand name
    ul.flex__container.html-container
        each bike in bikeList
          li.flex__item.product-item
            //img.product-item__photo(src="data:image/jpg;base64," + bike.picture)
            img.product-item__photo(src=bike.picture)
            .product-item__title #{bike.brand} #{bike.model}
            .product-item__price #{bike.price}&euro;
            .product-item__id #{bike.id}
            .flex__container-btn
              a.btn__add-to-cart.flex__item-btn(href="#") Add to cart
              a.btn__product-details.flex__item-btn(href=`/bike/allbikes/${bike._id}`) Details

block custom-scripts
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
  script(src='/static/scripts/allBikes.js')
 
