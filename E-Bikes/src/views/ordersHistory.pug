extends layout.pug

block custom-styles
    link(rel='stylesheet', href='/static/styles/ordersHistory.css')

block content
  .wrapper.wrapper--t-padding
    h2.title Order History
    ul.flex__container
        each bike in model
          li.flex__item.product-item
            img.product-item__photo(src=bike.picturePath)
            //- img.product-item__photo(src="data:image/jpg;base64," + bike.picture)
            .product-item__title #{bike.brand} #{bike.model}
            .product-item__price #{bike.price}&euro;
            .product-item__id #{bike.id}
            .flex__container-btn
              a.btn__product-details.flex__item-btn(href=`/bike/allbikes/${bike._id}`) Details
